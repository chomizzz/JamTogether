

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="form">
    <h1 class="text-white font-bold">Log in</h1>

    <div >
      <%= f.label :email, class:"label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "field #{'border-red-500 animate-pulse' if @user.errors[:email].any?} focus:border-gray-500", id: "form_input"%>
    </div>

    <div >
      <%= f.label :password, class:"label" %><br />
      <%= f.password_field :password, autocomplete: "current-password",class: "field #{'border-red-500 animate-pulse' if @user.errors[:password].any?} focus:border-gray-500", id: "form_input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-4 flex justify-center gap-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"text-white py-4"%>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"primary-button" %>
    </div>

    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
<% end %>



</div>

<div class="w-full">
  <table class="table-auto w-full border-separate  border-4 border-slate-500">
    <thead>
    <tr>
      <th id="ici" class="border border-slate-600 border-2">Leader</th>
      <th class="border border-slate-600 border-2">Room Name</th>
      <th class="border border-slate-600 border-2">Style</th>
      <th class="border border-slate-600 border-2">Max Player</th>
      <th class="border border-slate-600 border-2">Action</th>
    </tr>
    </thead>
    <tbody class="text-center text-white">
    <% @rooms.each do |room| %>
      <tr>
        <td class="border border-slate-600 border-2"><%= room.user_admin.pseudo %></td>
        <td class="border border-slate-600 border-2"><%= room.name %></td>
        <td class="border border-slate-600 border-2"><%= room.style %></td>
        <td class="border border-slate-600 border-2"><%= room.maxPlayer %></td>
        <td class="flex border border-slate-600 border-2 justify-around">
          <div>
            <%= link_to 'Spectate', room_path(room.id), class: "flex rounded my-1 px-2 py-0.5 bg-blue-300 text-black hover:bg-blue-50" %>
          </div>
          <div>
            <%= link_to 'Join', join_room_path(room.id), class: "flex rounded my-1 px-2 py-0.5 bg-gray-700 text-black hover:bg-gray-500" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



<div class="bg-purple-500">
  <%= react_component("FirstComponent",props: @hello_world_props, prerender: false) %>
</div>

